<h1>Edit Room</h1>

<%= form_with model: @room, local: true do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.submit "Save Changes" %>
  </div>
<% end %>

<a href="<%= room_path(@room) %>">Cancel</a>
